    "version": "0.2.0",
    "configurations": [

        {
            "name": "Run :: onefrontend (go-chi)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/onefrontend/server/",
            "args": [
                "--basepath",
                "../../../onefrontend"
            ],
            "envFile": "${workspaceFolder}/onefrontend/.env",
            "internalConsoleOptions": "openOnSessionStart",
            "showLog": true,
            "output": "debug"
        },
        {
            "name": "Run :: crypter (grpc)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/crypter/server/",
            "env": {},
            "args": [
                "--hostname",
                "localhost",
                "--port",
                "3000",
                "--basepath",
                "../../../crypter"
            ],
            "envFile": "${workspaceFolder}/crypter/.env",
            "internalConsoleOptions": "openOnSessionStart",
            "showLog": true,
            "output": "debug"
        },
        {
            "name": "Run :: login (go-chi)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/login/server/",
            "args": [
                "--port",
                "3001",
                "--basepath",
                "../../../login"
            ],
            "envFile": "${workspaceFolder}/login/.env",
            "internalConsoleOptions": "openOnSessionStart",
            "showLog": true,
            "output": "debug"
        },
        {
            "name": "Run :: mydms-go (echo)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/mydms/server/",
            "env": {},
			"args": [
                "--port",
                "3002",
                "--basepath",
                "../../../mydms"
            ],
            "envFile": "${workspaceFolder}/mydms/.env",
            "internalConsoleOptions": "openOnSessionStart",
            "showLog": true
        },
        {
            "name": "Run :: bookmarks (go-chi)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/bookmarks/server/",
            "args": [
                "--port",
                "3003",
                "--basepath",
                "../../../bookmarks"
            ],
            "envFile": "${workspaceFolder}/bookmarks/.env",
