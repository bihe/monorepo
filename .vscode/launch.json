    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run :: crypter (grpc)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/crypter/server/",
            "env": {},
            "args": [
                "--hostname",
                "localhost",
                "--port",
                "3000",
                "--basepath",
                "../../../internal/crypter"
            ],
            "envFile": "${workspaceFolder}/.env.monorepo",
            "internalConsoleOptions": "openOnSessionStart",
            "showLog": true,
            "output": "debug"
        },
