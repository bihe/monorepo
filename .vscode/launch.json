    "version": "0.2.0",
    "configurations": [

        {
            "name": "Run :: onefrontend (go-chi)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/onefrontend/server/",
            "args": [
                "--basepath",
                "../../../internal/onefrontend"
            ],
            "envFile": "${workspaceFolder}/internal/onefrontend/.env",
            "internalConsoleOptions": "openOnSessionStart",
            "showLog": true,
            "output": "debug"
